{
  "name": "prevent-file-change",
  "version": "3.0.0",
  "private": true,
  "description": "Fail a pull request workflow if certain files are changed",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src __tests__ *.ts *.json",
    "format-check": "prettier --check src __tests__ *.ts *.json",
    "lint": "eslint --fix",
    "lint-check": "eslint --max-warnings 0",
    "package": "ncc build src/index.ts -o dist --source-map --license LICENSE",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "all": "npm run build && npm run format-check && npm run lint-check && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xalvarez/prevent-file-change-action.git"
  },
  "keywords": [
    "github-actions",
    "node"
  ],
  "author": "Xavier Alvarez",
  "license": "MIT",
  "engines": {
    "node": "24.x"
  },
  "dependencies": {
    "@actions/core": "^2.0.3",
    "@actions/github": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.13",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.13.0",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
